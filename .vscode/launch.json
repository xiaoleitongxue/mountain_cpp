    "version": "0.2.0",
    "configurations": [
        {
            "name": "master",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/install/bin/main",
            "args": ["${workspaceFolder}/install/launch_local.json", "master"],
            "cwd": "${workspaceFolder}/install/bin",
            "stopAtEntry": false,
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "worker",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/install/bin/main",
            "args": ["${workspaceFolder}/install/launch_local.json", "worker", "0"],
            "cwd": "${workspaceFolder}/install/bin",
            "stopAtEntry": false,
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ]
        }
        
    ]
}